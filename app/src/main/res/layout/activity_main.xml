<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ginsmile.pokemaster.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:gravity="center"
        android:background="@color/colorPrimary">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/colorPrimary"
            android:id="@+id/relativeLayout">

            <me.itangqi.waveloadingview.WaveLoadingView
                android:id="@+id/waveLoadingView"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                app:mlv_borderColor="@color/colorAccent"
                app:mlv_borderWidth="3dp"
                app:mlv_progressValue="60"
                app:mlv_shapeType="circle"
                app:mlv_titleBottom="1.6/2.0GB"
                app:mlv_titleBottomColor="@color/colorTextWhite"
                app:mlv_titleBottomSize="14sp"
                app:mlv_titleCenter="Center Title"
                app:mlv_titleCenterColor="@color/colorTextWhite"
                app:mlv_titleCenterSize="24sp"
                app:mlv_waveAmplitude="14"
                app:mlv_waveColor="@color/colorAccent"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/avaMeme"
                android:textColor="@color/colorTextWhite"
                android:layout_below="@+id/waveLoadingView"
                android:layout_marginTop="9dp"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:background="@color/colorPrimary"
            android:id="@+id/relativeLayout2">

            <me.itangqi.waveloadingview.WaveLoadingView
                android:id="@+id/waveLoadingView2"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_centerHorizontal="true"
                app:mlv_borderColor="@color/colorAccent"
                app:mlv_borderWidth="3dp"
                app:mlv_progressValue="60"
                app:mlv_shapeType="circle"
                app:mlv_titleBottom="11.6/16.0GB"
                app:mlv_titleBottomColor="@color/colorTextWhite"
                app:mlv_titleBottomSize="14sp"
                app:mlv_titleCenter="Center Title"
                app:mlv_titleCenterColor="@color/colorTextWhite"
                app:mlv_titleCenterSize="24sp"
                app:mlv_waveAmplitude="14"
                app:mlv_waveColor="@color/colorAccent"/>

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:text="@string/avaStro"
                android:textColor="@color/colorTextWhite"
                android:layout_below="@id/waveLoadingView2"
                android:layout_marginTop="9dp"
                android:gravity="center"/>
        </RelativeLayout>
    </LinearLayout>


    <GridView
        android:id="@+id/gridview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:numColumns="3"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:minHeight="90dp"
        android:stretchMode="columnWidth"
        android:gravity="center"
        >

    </GridView>


</LinearLayout>
